@{
    ViewData["Title"] = "Вход";
}

<link rel="stylesheet" href="~/css/account.css" asp-append-version="true" />

<div id="login-container">
    <form asp-controller="Account">
        <div class="first">
            <input required placeholder="Login" name="Login" />
            <input required placeholder="Password" name="Password" />
            <button class="fogot-pswd-btn primary">Fogot Password?</button>
        </div>

        <div class="second">
            <button class="primary-btn" type="submit" method="post" asp-action="Login">Sing in</button>
            <button class="secondary-btn primary" type="submit" method="get" asp-action="Register">Sing up</button>
        </div>
    </form>
</div>