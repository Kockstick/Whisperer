@{
    ViewData["Title"] = "Вход";
}

<link rel="stylesheet" href="~/css/account.css" asp-append-version="true" />

<div id="login-container">
    <form asp-controller="Account">
        <div class="first">
            <input id="inputLogin" placeholder="Login" name="Login" />
            <input id="inputPassword" placeholder="Password" name="Password" />
            <button class="fogot-pswd-btn primary">Fogot Password?</button>
        </div>

        <div class="second">
            <button class="button primary-btn" method="post" asp-action="Login">Sing in</button>
            <button class="button secondary-btn primary" method="get" asp-action="SingUp">Sing up</button>
        </div>
    </form>
</div>
